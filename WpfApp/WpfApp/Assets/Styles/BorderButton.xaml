<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <Style x:Key="ButtonBorder" TargetType="Border">


        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="0,0,0,0" SnapsToDevicePixels="true"  />
                </ControlTemplate>
            </Setter.Value>
        </Setter>


        <Setter Property="Border.Width" Value="80"></Setter>
        <Setter Property="Border.Height" Value="80"></Setter>







    </Style>









</ResourceDictionary>